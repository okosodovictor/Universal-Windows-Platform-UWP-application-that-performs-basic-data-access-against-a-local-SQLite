<Page
    x:Class="EFCoreSQLITEProject.AddCategory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EFCoreSQLITEProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Background="White" Padding="20">
            <SymbolIcon x:ConnectionId='1' Symbol="Back"                                       />
            <TextBlock 
                Text="Category" 
                FontSize="26" 
                Margin="0 0 0 20" />
            <TextBox x:ConnectionId='2' 
                Header="Name" 
                x:Name="Name"
                PlaceholderText="Name" 
                InputScope="AlphanumericFullWidth" 
                Margin="0 0 0 20" />
            <TextBox x:ConnectionId='3' 
                Header="Count" 
                x:Name="Count"
                PlaceholderText="Count" 
                 InputScope="AlphanumericFullWidth"
                Margin="0 0 0 20" />
            <TextBox x:ConnectionId='4'  
                Header="image Url" 
                x:Name="IconUrl"
                PlaceholderText="image Url." 
                Margin="0 0 0 20" />
            <RelativePanel Margin="10">
                <Button x:ConnectionId='5' 
                    x:Name="button"
                Content="Save" 
                HorizontalAlignment="Center" 
                BorderBrush="Black" 
                Background="Green"
                BorderThickness="1" 
                Padding="10" Width="200"                     />
                <ProgressRing x:ConnectionId='6' x:Name="progress1" RelativePanel.RightOf="button" Foreground="Blue"/>
            </RelativePanel>
        </StackPanel>
    </Grid>
</Page>

